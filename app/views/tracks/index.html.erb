<%= form_tag("/tracks/show", method: "get") do %>
    <%= label_tag(:q, "Search for:") %>
    <%= text_field_tag(:q) %>
    <%= submit_tag("Search") %>
 <% end %>
 <div >
  <h1> Musicas já adiciondas </h1>

  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Nome da musica</th>
        <th scope="col">PLaylist Associada</th>
        <th scope="col">Ação</th>
      </tr>
    </thead>
    <tbody>
      <% @tracks.each do |track| %>
        <tr>
          <th scope="row"><%= track.id %></th>
          <td><%= track.name %></td>
          <td><%= track.playlist.name %></td>
          <td><%= button_to "Deletar", track, :method => :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>